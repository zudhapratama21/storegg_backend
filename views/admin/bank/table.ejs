<table id="example1" class="table table-bordered table-striped">
    <thead>
    <tr>
      <th>#</th>
      <th>Nama Pemilik</th>
      <th>Nama Bank</th>
      <th>No Rekening</th>      
      <th>Action</th>
    </tr>
    </thead>    
    <tbody>      
      <% for(let i = 0;i< bank.length ;i++){ %>               
        <tr>
          <td><%= i+1 %></td>
          <td><%= bank[i].name %></td>          
          <td><%= bank[i].bankName %></td>          
          <td><%= bank[i].noRekening %></td>          
          <td>
            <form action="/bank/delete/<%= bank[i]._id %>?_method=delete" method="POST">
              <a href="/bank/edit/<%= bank[i]._id %>" class="btn btn-warning btn-sm"><i class="fas fa-pencil-alt"></i></a>
              <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
            </form>
          </td>
        </tr>
      <% } %>
    </tbody>   
  </table>